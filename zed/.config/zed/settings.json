// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_profile": "ask",
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "edit_predictions": {
    "disabled_globs": ["~/Desktop/cp/**"],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    }
  },
  "scrollbar": {
    "show": "auto"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "tab_bar": { "show": true },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "tab_size": 2,

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },
  "features": { "edit_prediction_provider": "supermaven" },
  "wrap_guides": [80]
}
